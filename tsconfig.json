{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "utils"
  ]
}
